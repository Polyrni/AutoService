<Window x:Class="AutoService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vmCustomers="clr-namespace:AutoService.ViewModels.Customers"
        xmlns:vCustomers="clr-namespace:AutoService.Views.Customers"
        xmlns:vmEmployees="clr-namespace:AutoService.ViewModels.Employees"
        xmlns:vEmployees="clr-namespace:AutoService.Views.Employees"
        xmlns:services="clr-namespace:AutoService.Views.Services"
        xmlns:vmEmployees1="clr-namespace:AutoService.ViewModels.Services"
        xmlns:orders="clr-namespace:AutoService.Views.Orders"
        xmlns:vmOrders="clr-namespace:AutoService.ViewModels.Orders"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vmCustomers:CustomersViewModel}">
            <vCustomers:CustomersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmEmployees:EmployeesViewModel}">
            <vEmployees:EmployeesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmEmployees1:ServicesViewModel}">
            <services:ServicesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmOrders:OrdersViewModel}">
            <orders:OrdersView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <TabControl>

            <TabItem Header="Заказы">
                <ContentControl Content="{Binding OrdersVm}" />
            </TabItem>

            <TabItem Header="Справочники">
                <TabControl>
                    <TabItem Header="Клиенты">
                        <ContentControl Content="{Binding CustomersVm}" />
                    </TabItem>

                    <TabItem Header="Услуги/работы">
                        <ContentControl Content="{Binding ServicesVm}" />
                    </TabItem>

                    <TabItem Header="Сотрудники">
                        <ContentControl Content="{Binding EmployeesVm}" />
                    </TabItem>
                </TabControl>
            </TabItem>

        </TabControl>
    </Grid>
</Window>